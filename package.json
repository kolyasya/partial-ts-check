{
  "name": "partial-ts-check",
  "version": "0.0.5",
  "description": "CLI to run TypeScript checks and report only whitelisted files, ignoring blacklisted files.",
  "bin": {
    "partial-ts-check": "dist/cli.js"
  },
  "type": "module",
  "main": "dist/cli.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/cli.ts --format esm --target node18 --sourcemap false --minify --clean --out-dir dist",
    "dev": "tsup src/cli.ts --format esm --target node18 --watch --sourcemap --out-dir dist",
    "typecheck": "tsc --noEmit",
    "fixtures:tsc": "tsc --noEmit -p tsconfig.fixtures.json",
    "fixtures:partial": "pnpm -s build && node dist/cli.js",
    "fixtures:partial:fail": "pnpm -s build && node scripts/run-with-whitelist.mjs test-lists/fail.js",
    "fixtures:partial:ok": "pnpm -s build && node scripts/run-with-whitelist.mjs test-lists/pass.js",
    "prepare": "pnpm run build",
    "prepack": "pnpm run build",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "typescript",
    "tsc",
    "cli",
    "checker",
    "partial"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.7.1",
    "tsup": "^7.2.0",
    "typescript": "^5.9.3"
  },
  "partial-ts-check": {
    "whitelist": "test-lists/fail.js",
    "blacklist": "test-lists/blacklist.js",
    "printFilesList": true,
    "tsconfig": "tsconfig.fixtures.json"
  }
}